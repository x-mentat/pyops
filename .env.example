# Icinga2 Configuration
ICINGA_URL=https://your-icinga-server:5665
ICINGA_USER=apiuser
ICINGA_PASSWORD=your-api-password

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=development

# Authentication Configuration
# Set to 'false' to disable authentication entirely (not recommended for production)
AUTH_ENABLED=true

# Fallback Credentials (used when LDAP is unavailable)
# Leave empty to disable fallback authentication
FALLBACK_USERNAME=admin
FALLBACK_PASSWORD=change-this-fallback-password

# LDAP/Active Directory Configuration
LDAP_SERVER=dc.company.local
LDAP_PORT=389
LDAP_USE_SSL=false
LDAP_DOMAIN=COMPANY
LDAP_BASE_DN=DC=company,DC=local
LDAP_USER_FILTER=(sAMAccountName={username})# Comma-separated list of allowed AD groups (optional - leave empty to allow all authenticated users)
LDAP_ALLOWED_GROUPS=Admins,IT-Team,Monitoring-Users